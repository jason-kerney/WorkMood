<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:WorkMood.MauiApp.ViewModels"
             x:Class="WorkMood.MauiApp.Pages.Main"
             x:DataType="viewmodels:MainPageViewModel"
             Title="WorkMood - Daily Mood Tracker">

    <ScrollView>
        <Grid RowDefinitions="Auto,*,Auto" Padding="40">
        
            <!-- Header -->
            <StackLayout Grid.Row="0" Spacing="15" Margin="0,0,0,30">
            <Label Text="WorkMood" 
                   Style="{StaticResource Headline}"
                   FontSize="32"
                   HorizontalOptions="Center"
                   SemanticProperties.HeadingLevel="Level1" />
            
            <Label Text="Daily Mood Tracker" 
                   Style="{StaticResource SubHeadline}"
                   FontSize="18"
                   HorizontalOptions="Center"
                   SemanticProperties.HeadingLevel="Level2" />
            
            <Label x:Name="DateLabel" 
                   Text="{Binding CurrentDate}" 
                   Style="{StaticResource SubHeadline}"
                   FontSize="16"
                   HorizontalOptions="Center"
                   Margin="0,10,0,0" />
        </StackLayout>

        <!-- Main Content -->
        <StackLayout Grid.Row="1" Spacing="30" VerticalOptions="CenterAndExpand">
            
            <!-- Welcome Message -->
            <Border BackgroundColor="{StaticResource Secondary}" 
                    Padding="30" 
                    StrokeThickness="0"
                    StrokeShape="RoundRectangle 15">
                <StackLayout Spacing="10">
                    <Label Text="👋 Welcome!" 
                           FontSize="24" 
                           FontAttributes="Bold" 
                           TextColor="White"
                           HorizontalOptions="Center" />
                    
                    <Label Text="Track your daily mood and build better habits" 
                           FontSize="16"
                           TextColor="White"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center" />
                </StackLayout>
            </Border>

            <!-- Navigation Buttons -->
            <StackLayout Spacing="20">
                <Button Text="📝 Record Today's Mood"
                        x:Name="RecordMoodButton"
                        Command="{Binding RecordMoodCommand}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        FontSize="18"
                        FontAttributes="Bold"
                        Padding="20"
                        CornerRadius="10" />
                
                <Button Text="📊 View History"
                        x:Name="ViewHistoryButton"
                        Command="{Binding ViewHistoryCommand}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        FontSize="18"
                        FontAttributes="Bold"
                        Padding="20"
                        CornerRadius="10" />
                
                <Button Text="📈 Generate Graph"
                        x:Name="ViewGraphButton"
                        Command="{Binding ViewGraphCommand}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        FontSize="18"
                        FontAttributes="Bold"
                        Padding="20"
                        CornerRadius="10" />
                
                <Button Text="⚙️ Settings"
                        x:Name="SettingsButton"
                        Command="{Binding SettingsCommand}"
                        BackgroundColor="{StaticResource Secondary}"
                        TextColor="White"
                        FontSize="18"
                        FontAttributes="Bold"
                        Padding="20"
                        CornerRadius="10" />
                
                <Button Text="ℹ️ About"
                        x:Name="AboutButton"
                        Command="{Binding AboutCommand}"
                        BackgroundColor="DarkGreen"
                        TextColor="White"
                        FontSize="18"
                        FontAttributes="Bold"
                        Padding="20"
                        CornerRadius="10" />
            </StackLayout>

        </StackLayout>

        <!-- Footer -->
        <StackLayout Grid.Row="2" Margin="0,30,0,0">
            <Label Text="Auto-save enabled • Data synced locally" 
                   FontSize="12"
                   TextColor="{StaticResource Gray600}"
                   HorizontalOptions="Center" />
        </StackLayout>
        
    </Grid>
    </ScrollView>

</ContentPage>
