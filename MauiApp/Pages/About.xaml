<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="WorkMood.MauiApp.Pages.About"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:WorkMood.MauiApp.ViewModels"
             x:DataType="vm:AboutViewModel"
             Title="About">
    
    <ScrollView>
        <StackLayout Padding="20" Spacing="20">
            
            <!-- App Logo and Title -->
            <StackLayout HorizontalOptions="Center" Spacing="10">
                <Image Source="smiles.png" 
                       WidthRequest="100" 
                       HeightRequest="100"
                       HorizontalOptions="Center" />
                <Label Text="{Binding AppTitle}" 
                       FontSize="24" 
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center" />
                <Label Text="{Binding AppVersion}" 
                       FontSize="16" 
                       TextColor="Gray"
                       HorizontalOptions="Center" />
            </StackLayout>

            <!-- App Description -->
            <StackLayout Spacing="10">
                <Label Text="About This App" 
                       FontSize="20" 
                       FontAttributes="Bold" />
                <Label Text="{Binding AppDescription}"
                       FontSize="16"
                       TextColor="Gray" />
            </StackLayout>

            <!-- Special Thanks -->
            <StackLayout Spacing="10">
                <Label Text="Special Thanks" 
                       FontSize="20" 
                       FontAttributes="Bold" />
                
                <!-- Hunter Industries -->
                <Border BackgroundColor="LightGreen" 
                        Padding="15" 
                        StrokeShape="RoundRectangle 8">
                    <Border.Shadow>
                        <Shadow Brush="Black" Opacity="0.3" Radius="4" Offset="2,2" />
                    </Border.Shadow>
                    <StackLayout Spacing="8">
                        <Label Text="Hunter Industries" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               TextColor="DarkGreen" />
                        <Label Text="Thank you for providing the opportunity and environment to develop this application. Your support for innovative projects makes tools like WorkMood possible." 
                               FontSize="14"
                               TextColor="DarkGreen" />
                    </StackLayout>
                </Border>

                <!-- GitHub Copilot -->
                <Border BackgroundColor="LightCyan" 
                        Padding="15" 
                        StrokeShape="RoundRectangle 8">
                    <Border.Shadow>
                        <Shadow Brush="Black" Opacity="0.3" Radius="4" Offset="2,2" />
                    </Border.Shadow>
                    <StackLayout Spacing="8">
                        <Label Text="GitHub Copilot" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               TextColor="DarkCyan" />
                        <Label Text="Thank you for assistance with code development, UI design, and helping bring this mood tracking application to life." 
                               FontSize="14"
                               TextColor="DarkCyan" />
                    </StackLayout>
                </Border>
            </StackLayout>

            <!-- Icon Attribution -->
            <StackLayout Spacing="10">
                <Label Text="Icon Attribution" 
                       FontSize="20" 
                       FontAttributes="Bold" />
                <Label Text="The beautiful smiles icon used in this app was created by:" 
                       FontSize="16"
                       TextColor="Gray" />
                
                <Border BackgroundColor="LightBlue" 
                        Padding="15" 
                        StrokeShape="RoundRectangle 8">
                    <Border.Shadow>
                        <Shadow Brush="Black" Opacity="0.3" Radius="4" Offset="2,2" />
                    </Border.Shadow>
                    <StackLayout Spacing="8">
                        <Label Text="riajulislam" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               TextColor="DarkBlue" />
                        <Label Text="Thank you for creating this wonderful icon!" 
                               FontSize="14"
                               TextColor="DarkBlue" />
                    </StackLayout>
                </Border>
            </StackLayout>

            <!-- Logging Settings -->
            <StackLayout Spacing="10">
                <Label Text="Settings" 
                       FontSize="20" 
                       FontAttributes="Bold" />
                
                <Border BackgroundColor="LightGray" 
                        Padding="15" 
                        StrokeShape="RoundRectangle 8">
                    <Border.Shadow>
                        <Shadow Brush="Black" Opacity="0.3" Radius="4" Offset="2,2" />
                    </Border.Shadow>
                    <StackLayout Orientation="Horizontal" Spacing="10">
                        <CheckBox IsChecked="{Binding IsLoggingEnabled}" 
                                  VerticalOptions="Center" />
                        <Label Text="Enable Logging" 
                               FontSize="16"
                               VerticalOptions="Center"
                               TextColor="Black" />
                    </StackLayout>
                </Border>
                
                <Label Text="When unchecked, the application will not generate any log files. This can be useful for privacy or performance reasons." 
                       FontSize="12"
                       TextColor="Gray"
                       FontAttributes="Italic" />
            </StackLayout>

        </StackLayout>
    </ScrollView>
    
</ContentPage>