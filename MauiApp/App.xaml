<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WorkMood.MauiApp"
             xmlns:converters="clr-namespace:WorkMood.MauiApp.Converters"
             x:Class="WorkMood.MauiApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Value Converters -->
            <converters:MoodAverageConverter x:Key="MoodAverageConverter" />
            <converters:MoodEmojiConverter x:Key="MoodEmojiConverter" />
            <converters:IsNotNullConverter x:Key="IsNotNullConverter" />
            <converters:NullableMoodConverter x:Key="NullableMoodConverter" />
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
